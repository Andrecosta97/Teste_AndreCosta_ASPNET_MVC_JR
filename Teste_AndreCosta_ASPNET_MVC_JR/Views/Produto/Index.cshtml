@model IEnumerable<Teste_AndreCosta_ASPNET_MVC_JR.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h2>Produtos</h2>

<p>
    <a asp-action="AddOrEdit">Cadastrar novo produto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                @Html.ActionLink("Edit", "AddOrEdit", new { id = item.Id, ativo = item.Ativo }) | |
                @if (item.Ativo == false)
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id, ativo = item.Ativo })
                }
                else
                {
                    <span title="Não é permitida exclusão de produtos ativos">Delete</span>
                }
            </td>
        </tr>
}
    </tbody>
</table>
